<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.lazluiz.arcchallenge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.CustomApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main Activity -->
        <activity android:name=".views.MainActivity"></activity>

        <!-- List Activity -->
        <activity android:name=".views.ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Details Activity -->
        <activity
            android:name=".views.DetailsActivity"
            android:parentActivityName=".views.ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.ListActivity"/>
        </activity>


        <!-- TODO Bonus: Map Activity -->


    </application>

</manifest>